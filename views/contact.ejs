<!---------- CONTACT ---------->
<!--- Add contact details section --->
    <section class="contact">
        <div class="content">
           <!---------- <h2>Contact Us</h2><br> ----------> 
        </div>
           
<!---------- FORM ---------->
<!--- Add contact form --->

    <div class="container2">
        <div class="contactForm">
                <form>
                    <h1>Contact us</h1>
                    <h2>Send us a message and we will get back to you as soon as we can</h2>
                    <!--- Name input box --->
                    <div class="inputBox">
                        <input type="text" name="" required="required">
                        <span>Full Name</span>
                    </div>
                    <!--- E-mail input box --->
                    <div class="inputBox">
                        <input type="text" name="" required="required">
                        <span>Email</span>
                    </div>
                    <!--- Message input box --->
                    <div class="inputBox">
                        <textarea required="required"></textarea>
                        <span>Type your message...</span>
                    </div>

                    <!---------- Button ----------> 
                    <div class="whats">
                    <button class="btn">Send</button>
                    </div> 

                </form>
            </div>
        </div>
    </section>

