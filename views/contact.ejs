    <section class="contact">
    <div class="content">
        <h2>CONTACT US</h2>
        <br>
       <p></p> 
        </div>
        <div class="container2">
            <div class="contactInfo">
                <!--- Address --->
                <div class="box">
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                        <div class="text">
                            <h3>Address</h3>
                            <p>1576 Av. Conselheiro Aguiar<br>Boa Viagem, Recife - PE<br>Brazil 51111-010
                            </p>
                        </div>
                </div>
                <!--- Phone --->
                <div class="box">
                    <div class="icon"><i class="fas fa-phone-alt"></i></div>
                        <div class="text">
                            <h3>Phone</h3>
                            <p>+55 (81) 3325-2678
                            </p>
                    </div>
                </div>
                <!--- Email --->
                <div class="box">
                    <div class="icon"><i class="far fa-envelope"></i></div>
                        <div class="text">
                            <h3>Email</h3>
                            <p>a3design@a3designinteriores.com.br
                            </p>
                        </div>
                </div>
            </div>
            
<!---------- FORM ---------->
        <div class="contactForm">
                <form>
                    <div class="inputBox">
                        <input type="text" name="" required="required">
                        <span>Full Name</span>
                    </div>
                    <div class="inputBox">
                        <input type="text" name="" required="required">
                        <span>Email</span>
                    </div>
                    <div class="inputBox">
                        <textarea required="required"></textarea>
                        <span>Type your message...</span>
                    </div>
                    <div class="inputBox">
                        <input type="submit" name="" value="SEND IT">
                    </div>
                </form>
            </div>
        </div>
